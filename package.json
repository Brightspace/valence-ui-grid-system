{
  "name": "vui-grid-system",
  "version": "0.0.2",
  "description": "Mixins for laying out elements on a grid.",
  "scripts": {
    "build:css:breakpoints": "node-sass --output-style expanded ./sample/breakpoints.css.scss ./sample/breakpoints.css",
    "build:css:gutters": "node-sass --output-style expanded ./sample/gutters.css.scss ./sample/gutters.css",
    "build:css:simple": "node-sass --output-style expanded ./sample/simple.scss ./sample/simple.css",
    "build:css:isolate": "node-sass --output-style expanded ./sample/isolate.css.scss ./sample/isolate.css",
    "build:css:responsive": "node-sass --output-style expanded ./sample/responsive.scss ./sample/responsive.css",
    "postinstall": "bower install",
    "test": "npm run build:css:simple && npm run build:css:gutters && npm run build:css:isolate && npm run build:css:breakpoints && npm run build:css:responsive"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Brightspace/valence-ui-grid-system.git"
  },
  "keywords": [
    "d2l",
    "grid",
    "grid-system",
    "valence-ui",
    "vui"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Brightspace/valence-ui-grid-system/issues"
  },
  "homepage": "https://github.com/Brightspace/valence-ui-grid-system",
  "dependencies": {
    "bower": "^1.7.7"
  },
  "devDependencies": {
    "node-sass": "^3.4.2"
  }
}
